<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dip"
    android:background="@drawable/opportunity_litview">

    <TextView
        android:id="@+id/faculty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/faculty_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faculty_name"
        android:text="Major"
        android:textSize="14sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/faculty_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faculty_major"
        android:text="GPA"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/faculty_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/faculty_gpa"
        android:text="GPA"
        android:textSize="14sp"
        android:textColor="#000000"/>



</RelativeLayout>