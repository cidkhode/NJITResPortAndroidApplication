<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:fillViewport="true"
    tools:context=".CreateOpportunity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/createOpportunityName"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="93dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            android:hint="@string/opportunity_name" />

        <Spinner
            android:id="@+id/createOpportunityOppCollege"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/createOpportunityName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:entries="@array/opportunity_colleges"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/createOpportunityJobTitle"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/createOpportunityOppCollege"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:hint="@string/job_title"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/createOpportunityNumberOfStudents"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/createOpportunityJobTitle"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:hint="@string/number_of_students"
            android:inputType="number"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/createOpportunityExpectedHoursPerWeek"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/createOpportunityNumberOfStudents"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:hint="@string/expected_hours_per_week"
            android:inputType="number"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/createOpportunityMinGPA"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/createOpportunityExpectedHoursPerWeek"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:hint="Minimum GPA required"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp" />

        <Spinner
            android:id="@+id/createOpportunityCategory"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_below="@+id/createOpportunityMinGPA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_textbox"
            android:entries="@array/opportunity_categories"
            android:paddingHorizontal="10dp" />

        <EditText
            android:id="@+id/createOpportunityDescription"
            android:layout_marginTop="60dp"
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/createOpportunityCategory"
            android:layout_alignStart="@+id/createOpportunityCategory"
            android:layout_alignTop="@+id/createOpportunityCategory"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/details_requirements"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:focusable="true"
            android:enabled="true"
            android:minLines="6"
            android:maxLines="6"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp" />

        <Button
            android:id="@+id/createOpportunitySubmitButton"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:onClick="createOpp"
            android:layout_below="@+id/createOpportunityDescription"
            android:layout_marginTop="20dp"
            android:text="@string/create"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>
