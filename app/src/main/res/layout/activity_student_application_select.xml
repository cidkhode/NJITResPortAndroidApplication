<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.resport.cid.njitresportandroidapplication.StudentApplicationSelect">

    <TextView
        android:id="@+id/studentAppSelectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Research Opportunity"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/studentAppSelectTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="Name: Example Opportunity

College: NCE

Title of Candidate: Volunteer

Number of Students: 10

Weekly Hours: 4

Description: This is an example research opportunity just todemonstrate the idea."
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentAppSelectTextView"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/studentAppSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cc2127"
        android:text="Contact Facuclty"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentAppSelectTextView2"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/studentAppSelectTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Awaiting
"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentAppSelectTextView2"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/studentAppSelectTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="              Teacher Information
Name: Professor X
Office: X-Mansion 101
Email: xmen@gmail.com"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentAppSelectTextView3"
        app:layout_constraintVertical_bias="0.15" />

</android.support.constraint.ConstraintLayout>
