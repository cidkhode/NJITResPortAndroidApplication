<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:fillViewport="true"
    tools:context=".FacultyProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/facultyTitleViewApplicantsForParticularOpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="View Applicants"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/facultyListOfApplicantsForParticularOpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facultyTitleViewApplicantsForParticularOpp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@color/white"
            android:text="This is a list \n
- Of students who \n
- Have shown interest in \n
- Particular opportunity \n
- From previous page"
            android:textSize="24dp" />



    </RelativeLayout>
</ScrollView>