<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:fillViewport="true"
    tools:context=".StudentOpportunitiesList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/studentOpportunityViewTextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_textbox"
            android:ems="10"
            android:textSize="20dp"
            android:text="Name: Example Opportunity \n\nCollege: NCE \n\nNumber of Students: 10 \n\nDescription: This is an example research opportunity just to demonstrate the idea.\n\nFaculty: Prof X\n\nFaculty UCID: profx"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/studentOpportunityViewTextView"
            android:layout_alignStart="@+id/studentOpportunityViewTextView"
            android:layout_below="@+id/studentOpportunityViewTextView"
            android:text="Interest"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/studentOpportunityViewTextView"
            android:layout_alignRight="@+id/studentOpportunityViewTextView"
            android:layout_below="@+id/studentOpportunityViewTextView"
            android:text="Un-interest"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" />

    </RelativeLayout>

</ScrollView>